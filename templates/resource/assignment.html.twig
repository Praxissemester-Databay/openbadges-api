{% extends 'base.html.twig' %}

{% block title %}Hello DefaultController!{% endblock %}

{% block body %}
    <div class="position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center bg-light">
        <img class="col-md-3" src="{{ data.getImage() }}">
        <div class="col-md-8 p-lg-5 mx-auto my-5">
            <h3 class="font-weight-normal">{{ data.getBadge().getName() }}</h3>
            <p class="lead font-weight-normal">Awarded to: {{ data.getRecipient().getType() }} on {{ data.getIssuedOn().format('d.m.Y') }}</p>
            <p class="lead font-weight-normal">Awarded by: <a href="{{ app.request.baseUrl }}/{{ data.getBadge().getIssuer().getUrl() }}">{{  data.getBadge().getIssuer().getId() }}</a> </p>
            <p>{{ data.getNarrative() }}</p>
            <a class="btn btn-outline-secondary" href="#">Verify</a>
        </div>
        <div class="product-device box-shadow d-none d-md-block"></div>
        <div class="product-device product-device-2 box-shadow d-none d-md-block"></div>
    </div>


{% endblock %}